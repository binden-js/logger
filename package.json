{
  "name": "@binden/logger",
  "version": "1.0.0",
  "description": "A simple logger (based on pino)",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=16.6.1",
    "npm": ">=7.20.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/binden-js/logger.git"
  },
  "keywords": [
    "logger"
  ],
  "author": "Sergey Bakulin <sergey.bakulin.github@gmail.com>",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/binden-js/logger/issues"
  },
  "homepage": "https://github.com/binden-js/logger#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:remove && tsc",
    "build:remove": "rm -rf ./dist",
    "ci:all": "npm ci && npm run commitlint:all && npm run prettier && npm run lint && npm run publish:test",
    "commitlint": "commitlint --verbose",
    "commitlint:all": "npm run commitlint -- --from=$( git rev-list --max-parents=0 $( git rev-parse --abbrev-ref HEAD ) )",
    "docs:build": "npm run docs:remove && typedoc && npm run prettier:write -- --ignore-path .prettierignore_docs",
    "docs:remove": "rm -rf ./docs",
    "eslint": "eslint --ext .ts ./",
    "eslint:fix": "npm run eslint -- --fix",
    "install:clean": "rm -fr node_modules && rm -f package-lock.json && npm install",
    "postpublish": "npm run build:remove",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm run prettier:write",
    "prettier": "prettier -c .",
    "prettier:write": "npm run prettier -- --write",
    "publish:test": "npm publish --dry-run",
    "ts-node": "node --loader ts-node/esm"
  },
  "dependencies": {
    "pino": "^7.5.1"
  },
  "devDependencies": {
    "@binden/commitlint-config": "^1.0.0",
    "@binden/semantic-release-config": "^1.1.0",
    "@binden/tsconfig": "^1.0.0",
    "eslint-config-binden-ts": "^1.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.10"
  }
}
